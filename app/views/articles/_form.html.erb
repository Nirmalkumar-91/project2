<div class="container">

<div class="row justify-content-center">
    <div class="col-sm-10">
        <%= render "shared/errors", obj: @article %>
        <%= form_with(model: @article, local: true) do |f| %>
        <div class="form-group row">
            <%= f.label :title, class: 'col-sm-2 col-form-label' %></br>
            <div class="col-sm-10">
            <%= f.text_field :title, class: 'form-control', placeholder: "Title of Article" %>
            </div>
        </div>
        <div class="form-group row">
            <%= f.label :description, class: 'col-sm-2 col-form-label' %></br>
            <div class="col-sm-10">
            <%= f.text_area :description, rows: 10, class: 'form-control', placeholder: "Desc for Artilce" %>
            </div>
        </div>
        <div class="form-group row justify-content-center">
            <%= f.submit class: 'btn btn-outline-success' %>
        </div>
        <% end %>
        </div>
        <small><%= link_to '[ Cancel and return to article listing ]', articles_path  %></small>
    
</div>
</div>