<h1 class="text-center mt-4 mb-4">Category: <%= @category.name %></h1>

<% if logged_in? and current_user.admin? %>
<div class="text-center mt-4">
    <%= link_to 'Edit Category Name', edit_category_path(@category), class: "btn btn-outline-info" %>
</div>
<% end %>
<h3 class="text-center mt-4 mb-4"> Articles </h3>
<div class="flickr_pagination">
    <%= will_paginate @article_category, :container => false %>
</div>
<%= render 'articles/articles', obj_article: @categories %>
