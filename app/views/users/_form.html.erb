<div class="container">

<div class="row justify-content-center">
    <div class="col-sm-12">
        <%= render "shared/errors", obj: @user %>
        <%= form_with(model: @user, local: true) do |f| %>
        <div class="form-group row justify-content-center">
            <%= f.label :username, class: 'col-sm-2 col-form-label' %></br>
            <div class="col-sm-8">
            <%= f.text_field :username, class: 'form-control', placeholder: "Enter the User Name" %>
            </div>
        </div>
        <div class="form-group row justify-content-center">
            <%= f.label :email, class: 'col-sm-2 col-form-label' %></br>
            <div class="col-sm-8">
            <%= f.email_field :email, class: 'form-control', placeholder: "Enter the Email" %>
            </div>
        </div>
        <div class="form-group row justify-content-center">
            <%= f.label :password, class: 'col-sm-2 col-form-label' %></br>
            <div class="col-sm-8">
            <%= f.password_field :password, class: 'form-control', placeholder: "Enter the Password" %>
            </div>
        </div>
        <div class="form-group row justify-content-center">
            <%= f.submit "Sign Up", class: 'btn btn-outline-success' %>
        </div>
        <% end %>
        </div>
        <small ><%= link_to '[ Cancel and return to Home ]', root_path  %></small>
    
</div>

</div>